apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: nginx-ingress
  namespace: argocd
spec:
  project: default
  destination:
    server: https://kubernetes.default.svc
    namespace: nginx-ingress
  source:
    chart: nginx-ingress
    repoURL: ghcr.io/nginx/charts
    targetRevision: 2.2.2
    helm:
      releaseName: nginx-ingress
      valuesObject:
        controller:
          kind: deployment
          hostNetwork: false
          disableIPV6: true
          extraArgs:
            default-ssl-certificate: "nginx-ingress/linds-certificate-secret"
          service:
            externalIPs:
              - 172.16.1.20
          mgmt:
            resolver:
              ipv6: false
          replicaCount: 1 
        prometheus:
          port: 9113
          service:
            create: true
            port: 9113
          serviceMonitor:
            enabled: true
            namespace: monitoring
            interval: 30s
            scrapeTimeout: 10s
            additionalLabels:
              release: monitoring
  syncPolicy:
    automated:
      selfHeal: true
    syncOptions:
      - CreateNamespace=true
      - ServerSideApply=true
